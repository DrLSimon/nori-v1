<scene>
	<!-- Independent sample generator, user-selected samples per pixel -->
	<sampler type="independent">
		<integer name="sampleCount" value="1"/>
	</sampler>

	<!-- Use the direct illumination integrator -->
	<integrator type="normals"/>

	<!-- Render the scene as viewed by a perspective camera -->
	<camera type="perspective">
		<transform name="toWorld">
			<lookat target="0 , 0 , 0" origin="0, 0, -10" up="0, 1, 0"/>
		</transform>

		<!-- Field of view: 30 degrees -->
		<float name="fov" value="30"/>

		<!-- 768 x 768 pixels -->
		<integer name="width" value="768"/>
		<integer name="height" value="768"/>
	</camera>

	<!-- First sphere -->
    <shape type="instance">
		<transform name="toWorld">
			<translate value="2,0,2"/>
		</transform>
        <shape type="sphere">
            <bsdf type="diffuse">
                <color name="albedo" value=".2,.8,.2"/>
            </bsdf>
        </shape>
    </shape>

	<!-- second sphere -->
    <shape type="instance">
		<transform name="toWorld">
            <scale value="0.5,0.5,0.5"/>
            <rotate axis="1,0,0" angle="45"/>
			<translate value="0,-1,0"/>
		</transform>
        <shape type="sphere">
            <bsdf type="diffuse">
                <color name="albedo" value=".8,.2,.2"/>
            </bsdf>
        </shape>
    </shape>


	<!-- back plane -->
    <shape type="instance">
		<transform name="toWorld">
            <rotate axis="1,0,0" angle="-90"/>
			<translate value="0,0,3"/>
		</transform>
        <shape type="plane">
            <bsdf type="diffuse">
                <color name="albedo" value=".8,.8,.8"/>
            </bsdf>
        </shape>
    </shape>

	<!-- top plane -->
    <shape type="instance">
		<transform name="toWorld">
            <rotate axis="1,0,0" angle="180"/>
			<translate value="0,2,0"/>
		</transform>
        <shape type="plane">
            <bsdf type="diffuse">
                <color name="albedo" value=".8,.8,.8"/>
            </bsdf>
        </shape>
    </shape>

	<!-- bottom plane -->
    <shape type="instance">
		<transform name="toWorld">
			<translate value="0,-2,0"/>
		</transform>
        <shape type="plane">
            <bsdf type="diffuse">
                <color name="albedo" value=".8,.8,.8"/>
            </bsdf>
        </shape>
    </shape>

	<!-- left plane -->
    <shape type="instance">
		<transform name="toWorld">
            <rotate axis="0,0,1" angle="-90"/>
			<translate value="-2,0,0"/>
		</transform>
        <shape type="plane">
            <bsdf type="diffuse">
                <color name="albedo" value=".8,.1,.8"/>
            </bsdf>
        </shape>
    </shape>

	<!-- right plane -->
    <shape type="instance">
		<transform name="toWorld">
            <rotate axis="0,0,1" angle="90"/>
			<translate value="2,0,0"/>
		</transform>
        <shape type="plane">
            <bsdf type="diffuse">
                <color name="albedo" value=".2,.7,.1"/>
            </bsdf>
        </shape>
    </shape>
</scene>
